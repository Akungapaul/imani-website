# ===========================================
# Imani Website - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values

# Sanity CMS (Required)
# Get from: https://sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=

# Site URL
# Local: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===========================================
# Future Integrations
# ===========================================

# Resend - Contact Form (Epic 7)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=

# ConvertKit - Newsletter (Epic 7)
# Get from: https://app.convertkit.com/account_settings/developer_settings
CONVERTKIT_API_KEY=
CONVERTKIT_FORM_ID=

# Google Analytics (Epic 8)
# Get from: https://analytics.google.com
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Calendly - Booking (Epic 7)
NEXT_PUBLIC_CALENDLY_URL=
